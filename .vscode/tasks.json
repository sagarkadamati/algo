{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"group": "build",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
			},
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Unrestricted",
				"-NoProfile",
				"-File",
				"${cwd}/scripts/build.ps1",
				"-Build",
				"-FileName",
				"${relativeFile}"
			],
			"problemMatcher": {
				"owner": "kotlin",
				"fileLocation": "relative",
				"pattern": [
					{
						"regexp": "^(.*):(\\d+):(\\d+):\\s+(info|warning|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					},
					{
						// "regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
						// "regexp": "^\\s+(.*)\\s\\s+(.*)$",
						// "regexp": "^([^\\s].*)$",
						"regexp": "\\s+(.*)$",
						"code": 1
					}
				]
			}
		},
		{
			"label": "run",
			"group": "none",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
			},
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Unrestricted",
				"-NoProfile",
				"-File",
				"${cwd}/scripts/build.ps1",
				"-FileName",
				"${relativeFile}"
			],
			"problemMatcher": []
		}
	]
}